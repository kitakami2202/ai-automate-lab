---
import BaseLayout from '../layouts/BaseLayout.astro';
import SearchBar from '../components/SearchBar.astro';
import { getCollection } from 'astro:content';
import { generateWebSiteJsonLd } from '../utils/jsonld';
import { categoryLabels, categoryBorderClass } from '../utils/categories';

const allArticles = await getCollection('articles', ({ data }) => !data.draft);
const sortedArticles = allArticles.sort(
  (a, b) => b.data.publishedAt.valueOf() - a.data.publishedAt.valueOf()
);

const pillarArticles = allArticles.filter((a) => a.data.articleType === 'pillar');

const categories = Object.entries(categoryLabels).map(([slug, label]) => ({
  slug,
  label,
  border: categoryBorderClass[slug] || '',
}));

const articleCounts: Record<string, number> = {};
for (const cat of categories) {
  articleCounts[cat.slug] = allArticles.filter((a) => a.data.category === cat.slug).length;
}

const jsonLd = generateWebSiteJsonLd();

const formatDate = (date: Date) =>
  date.toLocaleDateString('ja-JP', { year: 'numeric', month: 'long', day: 'numeric' });
---

<BaseLayout
  title="AI Automate Lab | 中小企業のAI業務自動化ナレッジベース"
  description="中小企業のAI業務自動化を、フレームワークで再現可能にするナレッジベース。GAS、Discord Bot、AI API、ノーコードツールの実践的な活用法を解説。"
  jsonLd={jsonLd}
>
  <!-- Hero -->
  <section class="relative overflow-hidden bg-gradient-to-br from-blue-50 via-white to-indigo-50 py-16 md:py-24">
    <div class="absolute inset-0 opacity-30" aria-hidden="true">
      <div class="absolute top-10 right-10 w-72 h-72 bg-brand/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-10 left-10 w-96 h-96 bg-indigo-200/20 rounded-full blur-3xl"></div>
    </div>
    <div class="container text-center relative z-10">
      <p class="inline-block text-sm font-medium text-brand bg-blue-100 px-4 py-1.5 rounded-full mb-6">
        実務経験に基づく一次情報を{allArticles.length}本公開中
      </p>
      <h1 class="text-3xl md:text-5xl font-bold mb-4 leading-tight">
        月20時間のムダ作業、<br class="hidden md:block" />AIで自動化しませんか？
      </h1>
      <p class="text-lg text-gray-600 mb-10 max-w-2xl mx-auto leading-relaxed">
        GAS・ノーコードツール・AI APIの実装ガイドを公開中。<br class="hidden md:block" />
        コピペで使えるコード付き。
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-3 mb-8">
        <a
          href="/articles/frameworks/ai-introduction-5steps/"
          class="inline-flex items-center gap-2 px-6 py-3 bg-brand text-white font-semibold rounded-lg hover:bg-brand-hover transition-colors no-underline"
        >
          はじめての方はこちら
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
        <a
          href="/articles/"
          class="inline-flex items-center gap-2 px-6 py-3 border border-brand text-brand font-semibold rounded-lg hover:bg-blue-50 transition-colors no-underline"
        >
          記事を探す
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
      <div class="max-w-lg mx-auto">
        <SearchBar />
      </div>
    </div>
  </section>

  <!-- お悩み別おすすめ記事 -->
  <section class="section-spacing-sm">
    <div class="container">
      <h2 class="text-2xl font-bold mb-2 text-center">お悩み別おすすめ記事</h2>
      <p class="text-gray-600 text-center mb-8">よくあるお悩みから、最適な記事へご案内します</p>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <a
          href="/articles/frameworks/where-to-automate-first/"
          class="block bg-white p-6 rounded-xl border border-gray-200 hover:border-brand hover:shadow-md transition-all no-underline group"
        >
          <div class="w-12 h-12 flex items-center justify-center rounded-xl bg-blue-100 text-brand mb-4" aria-hidden="true">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
            </svg>
          </div>
          <h3 class="text-base font-bold text-gray-800 mb-2 group-hover:text-brand transition-colors">
            事務作業を減らしたい
          </h3>
          <p class="text-sm text-gray-600">
            どの業務から自動化すべきか、優先順位の付け方を解説します。
          </p>
        </a>
        <a
          href="/articles/frameworks/ai-introduction-5steps/"
          class="block bg-white p-6 rounded-xl border border-gray-200 hover:border-brand hover:shadow-md transition-all no-underline group"
        >
          <div class="w-12 h-12 flex items-center justify-center rounded-xl bg-indigo-100 text-indigo-600 mb-4" aria-hidden="true">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="text-base font-bold text-gray-800 mb-2 group-hover:text-brand transition-colors">
            AIを導入したいが何から？
          </h3>
          <p class="text-sm text-gray-600">
            AI導入の5ステップを初心者向けにわかりやすく解説します。
          </p>
        </a>
        <a
          href="/articles/reviews/automation-tools-matrix/"
          class="block bg-white p-6 rounded-xl border border-gray-200 hover:border-brand hover:shadow-md transition-all no-underline group"
        >
          <div class="w-12 h-12 flex items-center justify-center rounded-xl bg-green-100 text-green-600 mb-4" aria-hidden="true">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
          <h3 class="text-base font-bold text-gray-800 mb-2 group-hover:text-brand transition-colors">
            ツール選びで迷っている
          </h3>
          <p class="text-sm text-gray-600">
            主要な自動化ツールを比較マトリクスで一覧できます。
          </p>
        </a>
      </div>
    </div>
  </section>

  <!-- Categories -->
  <section id="categories" class="section-spacing">
    <div class="container">
    <h2 class="text-2xl font-bold mb-8 text-center">カテゴリ</h2>
    <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
      {categories.map((cat) => (
        <a
          href={`/category/${cat.slug}/`}
          class:list={[
            'block border-l-2 pl-4 py-3 hover:bg-gray-50 transition-colors no-underline rounded-r',
            cat.border,
          ]}
        >
          <div class="flex items-center justify-between">
            <h3 class="text-sm font-bold text-gray-800">{cat.label}</h3>
            <span class="text-xs font-medium bg-gray-100 text-gray-500 px-2 py-0.5 rounded-full">
              {articleCounts[cat.slug]}件
            </span>
          </div>
        </a>
      ))}
    </div>
    </div>
  </section>

  <!-- Pillar Articles -->
  {pillarArticles.length > 0 && (
    <section class="bg-gray-50 py-16">
      <div class="container">
        <h2 class="text-2xl font-bold mb-2 text-center">まず読むべき記事</h2>
        <p class="text-gray-600 text-center mb-8">各カテゴリの全体像を掴む入門ガイド</p>
        <div class="space-y-4">
          {pillarArticles.slice(0, 3).map((article) => {
            const relatedCount = allArticles.filter(
              (a) => a.data.category === article.data.category && a.slug !== article.slug
            ).length;
            return (
              <a
                href={`/articles/${article.slug}/`}
                class="block bg-white p-6 md:p-8 rounded-xl border-2 border-brand/20 hover:border-brand hover:shadow-lg transition-all no-underline"
              >
                <div class="flex flex-col md:flex-row md:items-start md:gap-6">
                  <div class="flex-1">
                    <div class="flex items-center gap-2 mb-3">
                      <span class="inline-block text-xs font-bold text-white bg-brand px-3 py-1 rounded-full">
                        入門ガイド
                      </span>
                      <span class="inline-block text-xs font-medium text-gray-500 bg-gray-100 px-2 py-1 rounded">
                        {categoryLabels[article.data.category] || article.data.category}
                      </span>
                    </div>
                    <h3 class="text-lg md:text-xl font-bold text-gray-800 mb-2 leading-snug">
                      {article.data.title}
                    </h3>
                    <p class="text-sm text-gray-500 mb-3">
                      {article.data.description}
                    </p>
                    <div class="flex items-center gap-3 text-xs text-gray-500">
                      <span>約{article.data.timeToRead}分で読了</span>
                      {relatedCount > 0 && (
                        <span>関連記事 {relatedCount}本</span>
                      )}
                    </div>
                  </div>
                  <div class="hidden md:flex items-center mt-4 md:mt-0">
                    <span class="text-brand font-medium text-sm whitespace-nowrap">読む →</span>
                  </div>
                </div>
              </a>
            );
          })}
        </div>
      </div>
    </section>
  )}

  <!-- Latest Articles -->
  <section class="section-spacing">
    <div class="container">
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl font-bold">最新記事</h2>
        <a href="/articles/" class="text-sm font-medium text-brand hover:underline no-underline">
          すべての記事を見る →
        </a>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {sortedArticles.slice(0, 6).map((article) => (
          <a
            href={`/articles/${article.slug}/`}
            class="card no-underline"
          >
            <span class="inline-block text-xs font-medium text-brand bg-blue-50 px-2 py-0.5 rounded mb-3">
              {categoryLabels[article.data.category] || article.data.category}
            </span>
            <h3 class="text-base font-bold text-gray-800 mb-2 leading-snug">
              {article.data.title}
            </h3>
            <p class="text-sm text-gray-600 mb-3 line-clamp-2">
              {article.data.description}
            </p>
            <div class="flex items-center gap-2 text-xs text-gray-500">
              <time datetime={article.data.publishedAt.toISOString()}>
                {formatDate(article.data.publishedAt)}
              </time>
              <span>・約{article.data.timeToRead}分</span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
