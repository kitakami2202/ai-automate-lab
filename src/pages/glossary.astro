---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';

const glossaryItems = [
  { term: 'API', reading: 'エーピーアイ', description: 'Application Programming Interfaceの略。ソフトウェア同士がデータをやり取りするための仕組み。' },
  { term: 'GAS', reading: 'ガス', description: 'Google Apps Scriptの略。Googleが提供するスクリプト環境で、Googleサービスを自動化できる。' },
  { term: 'Webhook', reading: 'ウェブフック', description: 'あるイベントが発生したときに、指定したURLにHTTPリクエストを送信する仕組み。' },
  { term: 'LLM', reading: 'エルエルエム', description: 'Large Language Modelの略。大量のテキストデータで訓練された大規模言語モデル。' },
  { term: 'トークン', reading: 'トークン', description: 'AI APIにおけるテキストの処理単位。日本語では1文字が1〜3トークン程度。' },
  { term: 'プロンプト', reading: 'プロンプト', description: 'AIモデルに対する入力テキスト（指示文）。プロンプトの品質がAIの出力品質に直結する。' },
  { term: 'ノーコード', reading: 'ノーコード', description: 'プログラミング不要でアプリケーションやワークフローを構築できるツール・手法。' },
  { term: 'ローコード', reading: 'ローコード', description: '最小限のコーディングでアプリケーションを構築できるツール・手法。' },
  { term: 'CI/CD', reading: 'シーアイシーディー', description: '継続的インテグレーション/継続的デリバリー。コードの変更を自動でテスト・デプロイする仕組み。' },
  { term: 'SFTP', reading: 'エスエフティーピー', description: 'SSH File Transfer Protocolの略。暗号化されたファイル転送プロトコル。' },
  { term: 'JSON-LD', reading: 'ジェイソンエルディー', description: 'JSON for Linking Dataの略。構造化データをWebページに埋め込むための形式。SEOに有効。' },
  { term: 'OGP', reading: 'オージーピー', description: 'Open Graph Protocolの略。SNSでシェアされたときのタイトル・画像・説明文を指定する仕組み。' },
  { term: 'ROI', reading: 'アールオーアイ', description: 'Return on Investmentの略。投資対効果。自動化プロジェクトの費用対効果を測る指標。' },
  { term: 'スクレイピング', reading: 'スクレイピング', description: 'Webサイトから自動的にデータを収集する技術。利用規約を確認して適切に行うことが重要。' },
  { term: 'マルチモーダル', reading: 'マルチモーダル', description: 'テキスト、画像、音声など複数の種類のデータを扱えるAIの能力。' },
].sort((a, b) => a.term.localeCompare(b.term, 'ja'));
---

<BaseLayout
  title="用語集 | AI Automate Lab"
  description="AI・自動化に関する用語集。API、GAS、LLM、Webhookなど、よく使われる専門用語をわかりやすく解説します。"
>
  <div class="container py-10">
    <Breadcrumb items={[{ name: '用語集', url: '/glossary/' }]} />

    <h1 class="text-3xl font-bold mb-8">用語集</h1>
    <p class="text-gray-600 mb-8">
      AI・自動化でよく使われる用語をまとめました。記事を読む際の参考にしてください。
    </p>

    <div class="space-y-4">
      {glossaryItems.map((item) => (
        <div class="border border-gray-200 rounded-lg p-5">
          <div class="flex items-baseline gap-3 mb-2">
            <h2 class="text-lg font-bold text-gray-800">{item.term}</h2>
            <span class="text-sm text-gray-500">({item.reading})</span>
          </div>
          <p class="text-gray-600 leading-relaxed">{item.description}</p>
        </div>
      ))}
    </div>
  </div>
</BaseLayout>
