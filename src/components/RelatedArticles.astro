---
import type { CollectionEntry } from 'astro:content';

export interface Props {
  articles: CollectionEntry<'articles'>[];
}

const { articles } = Astro.props;
---

{articles.length > 0 && (
  <section class="mt-12 pt-8 border-t border-gray-200">
    <h2 class="text-xl font-bold mb-6">関連記事</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      {articles.slice(0, 4).map((article) => (
        <a
          href={`/articles/${article.slug}/`}
          class="block p-4 border border-gray-200 rounded-lg hover:border-brand hover:shadow-sm transition-all no-underline"
        >
          <span class="inline-block text-xs font-medium text-brand bg-blue-50 px-2 py-0.5 rounded mb-2">
            {article.data.category}
          </span>
          <h3 class="text-base font-medium text-gray-800 leading-snug">
            {article.data.title}
          </h3>
        </a>
      ))}
    </div>
  </section>
)}
