---
import { generateFAQJsonLd } from '../utils/jsonld';

export interface Props {
  items: { question: string; answer: string }[];
}

const { items } = Astro.props;
const jsonLd = generateFAQJsonLd(items);
---

<section class="my-10">
  <h2 class="text-2xl font-bold mb-6">よくある質問</h2>
  <div class="space-y-4">
    {items.map((item) => (
      <details class="border border-gray-200 rounded-lg group">
        <summary class="flex items-center justify-between p-4 cursor-pointer font-medium text-gray-800 hover:bg-gray-50">
          <span>{item.question}</span>
          <svg class="w-5 h-5 text-gray-400 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </summary>
        <div class="px-4 pb-4 text-gray-600 leading-relaxed">
          <p>{item.answer}</p>
        </div>
      </details>
    ))}
  </div>
</section>

<script type="application/ld+json" set:html={jsonLd} />
