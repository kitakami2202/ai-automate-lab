<div class="relative">
  <div id="search" class="w-full"></div>
</div>

<link href="/pagefind/pagefind-ui.css" rel="stylesheet" />
<script is:inline src="/pagefind/pagefind-ui.js"></script>
<script is:inline>
  window.addEventListener('DOMContentLoaded', () => {
    new PagefindUI({
      element: '#search',
      showSubResults: true,
      translations: {
        placeholder: '記事を検索...',
        zero_results: '「[SEARCH_TERM]」に一致する記事が見つかりませんでした',
      },
    });
  });
</script>

<style is:global>
  .pagefind-ui__search-input {
    @apply border border-gray-300 rounded-lg px-4 py-2 w-full text-sm focus:outline-none focus:ring-2 focus:ring-brand focus:border-transparent;
  }

  .pagefind-ui__result-link {
    @apply text-brand font-medium;
  }
</style>
